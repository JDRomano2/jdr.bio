---
title: Publications
permalink: /publications.html
---

{% extends 'layouts/page.njk' %}

{% block content %}
  <div id="page-content">
    <section>
      <h2>Scientific publications</h2>
      <p><button onclick="window.location.href = 'https://scholar.google.com/citations?user=Lr-3Bj4AAAAJ&hl=en';" target="_blank" class="outlink-button">Google Scholar profile</button>
      <button onclick="window.location.href = 'https://orcid.org/0000-0002-7999-4399';" target="_blank" class="outlink-button">ORCID: 0000-0002-7999-4399</button>
      <button href="" target="" class="outlink-button">My <span class="latex">B<small>IB</small>T<sub>e</sub>X</span> database</button></p>
      <hr>
      <h3>Peer-reviewed articles</h3>

      {%- for pub in publications -%}
      {% if pub.title %}
      <div class="pub-entry">
        <p class="pub-title"><b>{{ pub.title }}</b></p>
        {% if pub.authors %}
        <p class="pub-authors">{{ pub.authors }}.</p>
        {% endif %}
        {% if pub.journal %}
        <p class="pub-journal"><i>{{ pub.journal }}</i>. {% if pub.doi %}(DOI: <a href="https://doi.org/{{ pub.doi }}" target="_blank">{{ pub.doi }}</a>){% endif %}</p>
        {% endif %}
        <div class="pub-buttons">
          {% if pub.journal_link %}
            <button class="pub-button-journal" onclick="window.location.href = '{{ pub.journal_link }}';" target="_blank">Journal link</button>
          {% endif %}
          {% if pub.pmid %}
            <button class="pub-button-journal" onclick="window.location.href = 'https://www.ncbi.nlm.nih.gov/pubmed/{{ pub.pmid }}';" target="_blank">PubMed</button>
          {% endif %}
          {% if pub.pmcid %}
            <button class="pub-button-journal" onclick="window.location.href = 'https://www.ncbi.nlm.nih.gov/pmc/articles/{{ pub.pmcid }}';" target="_blank">PubMed Central</button>
          {% endif %}
          {% if pub.google_scholar_link %}
            <button class="pub-button-journal" onclick="window.location.href = '{{ pub.google_scholar_link }}';" target="_blank">Google Scholar</button>
          {% endif %}
          {% if pub.bib_entry %}
            <button class="pub-button-journal" onclick="window.location.href = '{{ pub.bib_entry }}';" target="_blank">.bib entry</button>
          {% endif %}
        </div>
      </div>
      {% endif %}
      {%- endfor -%}

      <hr style="margin-top: 36px;">
      <h3>Preprints</h3>

      {%- for pub in preprints -%}
      {% if pub.title %}
      <div class="preprint-entry">
        <p class="pub-title"><b>{{ pub.title }}</b></p>
        {% if pub.authors %}
        <p class="pub-authors">{{ pub.authors }}.</p>
        {% endif %}
        {% if pub.journal %}
        <p class="pub-journal"><i>{{ pub.journal }}</i>. {% if pub.doi %}(DOI: <a href="https://doi.org/{{ pub.doi }}" target="_blank">{{ pub.doi }}</a>){% endif %}</p>
        {% endif %}
        <div class="pub-buttons">
          {% if pub.journal_link %}
            <button class="pub-button-journal" onclick="window.location.href = '{{ pub.journal_link }}';" target="_blank">Preprint server link</button>
          {% endif %}
          {% if pub.pmid %}
            <button class="pub-button-journal" onclick="window.location.href = '{{ pub.pmid }}';" target="_blank">PubMed</button>
          {% endif %}
          {% if pub.pmcid %}
            <button class="pub-button-journal" onclick="window.location.href = '{{ pub.pmcid }}';" target="_blank">PubMed Central</button>
          {% endif %}
          {% if pub.google_scholar_link %}
            <button class="pub-button-journal" onclick="window.location.href = '{{ pub.google_scholar_link }}';" target="_blank">Google Scholar</button>
          {% endif %}
          {% if pub.bib_entry %}
            <button class="pub-button-journal" onclick="window.location.href = '{{ pub.bib_entry }}';" target="_blank">.bib entry</button>
          {% endif %}
        </div>
      </div>
      {% endif %}
      {%- endfor -%}
    </section>
  </div>
{% endblock %}